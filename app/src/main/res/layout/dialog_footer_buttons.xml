<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/usermeal_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/usermeal_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown" />
      <!--  <TextView
            android:id="@+id/usermeal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Breakfast"
            android:textColor="@color/tab_highlight"
            android:textSize="18dp"
            android:textStyle="bold"/> -->

        <ImageView
            android:id="@+id/usermeal_spinner_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/up_arrow"
            android:tint="@color/tab_highlight"
            android:layout_gravity="center"
            android:clickable="true"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="right"
            android:textColor="@drawable/darkgray_to_main"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginRight="30dp"
            android:clickable="true"/>

        <TextView
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:gravity="right"
            android:textColor="@drawable/darkgray_to_main"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>
