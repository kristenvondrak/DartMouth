<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.kristenvondrak.main.DiaryFragment">

    <!-- Header -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main">

        <!-- Date -->
        <include layout="@layout/date_selector_header" />

    </FrameLayout>


    <!-- Calorie Summary -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:background="@color/light_gray_transparent"
        android:stretchColumns="*">

        <!-- Calorie Names -->
        <TableRow
            android:id="@+id/table_headers">

            <!-- Goal -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Goal"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Food -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Food"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Exercise -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Exercise"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Remaining -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Remaining"/>

        </TableRow>

        <!-- Calorie Values-->
        <TableRow>

            <TextView
                android:id="@+id/total_goal_cals"
                style="@style/DiaryTableValue"
                android:text="1,500"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="-"/>

            <TextView
                android:id="@+id/total_food_cals"
                style="@style/DiaryTableValue"
                android:text="780"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="+"/>

            <TextView
                android:id="@+id/total_exercise_cals"
                style="@style/DiaryTableValue"
                android:text="350"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="="/>

            <TextView
                android:id="@+id/total_remaining_cals"
                style="@style/DiaryTableRemainder"
                android:text="1,070"/>

        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />


    <!-- Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/diary_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="0dp"
            android:divider="@null">
        </ListView>

        <ProgressBar
            android:id="@+id/progress_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>
