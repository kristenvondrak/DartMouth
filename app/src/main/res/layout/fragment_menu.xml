<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.kristenvondrak.main.MenuFragment">

    <ViewFlipper
        android:id="@+id/menu_header_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <!-- Date -->
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/tab_highlight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/prev_date_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/left_arrow_selector"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:text="Sat, Jan 9"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:id="@+id/next_date_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/right_arrow_selector"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/date_search_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search_white"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"/>

            <!-- Nutrion Add/Cancel -->
            <TextView
                android:id="@+id/add_item_add_btn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/add_item_cancel_btn"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"/>

        </FrameLayout>

        <!-- Search -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/tab_highlight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_search_white"
                    android:tint="@color/light_gray"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"/>

                <EditText
                    android:id="@+id/search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginRight="40dp"
                    android:hint="Search for food items"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_gray"
                    android:background="@null"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/search_cancel_btn"
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Cancel"
                android:layout_marginRight="10dp"/>

        </LinearLayout>
    </ViewFlipper>


    <ViewFlipper
        android:id="@+id/menu_contents_viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:stretchColumns="*">
                <TableRow
                    android:id="@+id/venue_tabs_row">
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_gray" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:stretchColumns="*"
                android:shrinkColumns="*">
                <TableRow
                    android:id="@+id/mealtime_tabs_row">
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_gray" />

            <HorizontalScrollView
                android:id="@+id/category_tabs_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:scrollbarAlwaysDrawVerticalTrack="false">

                <LinearLayout
                    android:id="@+id/category_tabs_ll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/menu_gray"
                android:layout_marginBottom="5dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/food_items_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:choiceMode="singleChoice"
                    android:listSelector="@color/light_gray"
                    android:requiresFadingEdge="vertical"
                    android:fadingEdgeLength="30dp">
                </ListView>

                <LinearLayout
                    android:id="@+id/empty_food_list"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sad"
                        android:tint="@color/light_gray"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No menu items."
                        android:textSize="16dp"
                        android:textColor="@color/light_gray"
                        android:layout_gravity="center"/>

                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

        <!-- Nutrition Info -->
        <include layout="@layout/nutrition" />

    </ViewFlipper>

</LinearLayout>