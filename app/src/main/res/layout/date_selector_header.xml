<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_selector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/prev_date_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/left_arrow_selector"
        android:background="@android:color/transparent"
        android:layout_gravity="center_vertical"/>

    <TextView
        style="@style/HeaderText"
        android:id="@+id/date_text_view"
        android:text="Sat, Jan 9"
        android:textColor="@color/text_view_white_to_gray"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/next_date_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_arrow_selector"
        android:background="@android:color/transparent"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
