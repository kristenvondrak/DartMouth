<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:background="@color/light_gray_transparent"
        android:stretchColumns="*">

        <!-- Calorie Names -->
        <TableRow
            android:id="@+id/table_headers">

            <!-- Goal -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Goal"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Food -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Food"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Exercise -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Exercise"/>

            <TextView
                android:layout_weight=".5"
                android:gravity="center"
                android:text=""/>

            <!-- Remaining -->
            <TextView
                android:layout_weight="5"
                android:textSize="14dp"
                android:gravity="center"
                android:text="Remaining"/>

        </TableRow>

        <!-- Calorie Values-->
        <TableRow>

            <TextView
                android:id="@+id/total_goal_cals"
                style="@style/DiaryTableValue"
                android:text="1,500"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="-"/>

            <TextView
                android:id="@+id/total_food_cals"
                style="@style/DiaryTableValue"
                android:text="780"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="+"/>

            <TextView
                android:id="@+id/total_exercise_cals"
                style="@style/DiaryTableValue"
                android:text="350"/>

            <TextView
                style="@style/DiaryTableSymbol"
                android:text="="/>

            <TextView
                android:id="@+id/total_remaining_cals"
                style="@style/DiaryTableRemainder"
                android:text="1,070"/>

        </TableRow>
    </TableLayout>

</LinearLayout>