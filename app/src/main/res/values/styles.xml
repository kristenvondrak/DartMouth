<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NutritionTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NutritionSubtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">@color/gray_transparent</item>
    </style>

    <style name="NutritionValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NutritionSubvalue" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/gray_transparent</item>
    </style>

    <style name="CustomFoodTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomFoodTextView2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="CustomFoodEditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">number</item>
    </style>


    <style name="NutritionColumn1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NutritionColumn2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Weekday" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Day" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DiaryTableValue" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DiaryTableSymbol" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="DiaryTableRemainder" parent="@android:style/TextAppearance.Medium">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RelativeLayoutTab" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>


    <style name="TextViewTab" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
